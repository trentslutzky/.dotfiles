[colors]
background = #cc000000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
accent = #227722

[bar/main]
monitor = ${env:MONITOR:HDMI-0}
width = 3839
height = 40
;radius = 6.0
fixed-center = true
offset-x = 1

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = ${xrdb:color7}

padding-left = 0
padding-right = 1

module-margin-left = 2
;module-margin-right = 2

font-0 = "JetbrainsMono Nerd Font:size=15;3"
font-1 = WeatherIcons:size=13;3
font-2 = "JetbrainsMono Nerd Font:size=20;5"

modules-left = bspwm slack discord spotify
modules-center = player
modules-right = pulseaudio date

wm-restack = bspwm
;wm-restack = i3

override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.accent}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date = "%a %b %d "
time = "%I:%M %p"

label = %{F#55aa55}%{F-}  %date% %{F#55aa55}%{F-} %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = %{F#55aa55}墳%{F-} %percentage%%

label-muted = 🔇 muted
label-muted-foreground = #666

bat-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/player]
type = custom/script
exec = $HOME/.config/polybar/player.sh
interval = 1
click-left = playerctl play-pause
click-middle = xdo activate -N Spotify

[module/discord]
type = custom/text
content = %{F#5865F2}%{T3}ﭮ%{T-}%{F-}
click-left = xdo activate -N discord

[module/spotify]
type = custom/text
content = %{F#1DB954}%{T3} %{T-}%{F-}
click-left = xdo activate -N Spotify

[module/slack]
type = custom/text
content = %{F#ECB22E}%{T3}聆%{T-}%{F-}
click-left = xdo activate -N Slack

[module/weather]
type = custom/script
exec = (echo %{F#55aa55};busctl --user -j get-property io.ntfd /weather openweathermap.strings CurrentIcon | jq -r .data;echo %{F-}; busctl --user -j call io.ntfd /weather openweathermap.strings CurrentTemperature s "fahrenheit" | jq -r '.data[0]';echo °F) | tr '\n' ' ';
interval = 60
label-font = 2

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

